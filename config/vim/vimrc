set tags+=~/.vim/tags/ctags
set tags+=~/.vim/tags/cpptags
set tags+=~/.vim/tags/cppexttags
set tags+=~/.vim/tags/gnutags
"set tags+=~/.vim/tags/phptags
"set tags+=~/.vim/tags/kerneltags
