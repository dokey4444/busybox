<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE log4c SYSTEM "">

<log4c version="1.2.2">

	<config>
		<bufsize>0</bufsize>
		<debug level="0"/>
		<nocleanup>0</nocleanup>
	</config>

	<!-- root category ========================================= -->
	<category name="root" priority="notice"/>
	<category name="runlog" priority="trace" appender="stdout" />

	<!-- default rollingpolicy ===================================== -->
	<rollingpolicy name="defaultpolicy" type="sizewin" maxsize="104857600" maxnum="10" />

	<!-- default appenders ===================================== -->
	<appender name="stdout" type="stream" layout="basic"/>
	<appender name="stderr" type="stream" layout="dated"/>
	<appender name="logfile" type="rollingfile" layout="basic" logdir="./" prefix="log" rollingpolicy="defaultpolicy"/>
	<appender name="syslog" type="syslog" layout="basic"/>

	<!-- default layouts ======================================= -->
	<layout name="basic" type="basic"/>
	<layout name="dated" type="dated"/>
</log4c>
